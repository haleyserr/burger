<div class="container">

        <div class="row">
            <div class="col-md-6">
                <p>Ask the Cook for a Burger</p>
                <input class="form-control" type="text" id="burger" placeholder="Enter a Burger">
                <br>
                <button id="burger-submit" class="btn btn-lg">Submit</button>
            </div>
        </div>

        <br>

        <div class="row">
            <div class="col-md-6">
                
                <h2>Available Burgers</h2>
                <!-- Target Here -->
                <div id="not-eaten-burgers">
                
                <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
                </ul>


                </div>

            </div>
            <div class="col-md-6">
                    
                <h2>Devoured Burgers</h2>
                <!-- Target Here -->
                <div id="eaten-burgers">

                <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
</ul> 
                </div>

            </div>
        </div>

    </div>
